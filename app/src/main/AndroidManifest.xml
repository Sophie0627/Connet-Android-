<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.company.connet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Connet">
        <activity
            android:name=".LocalActivity"
            android:label="@string/title_activity_local"
            android:theme="@style/Theme.Connet.NoActionBar"></activity>
        <activity
            android:name=".ConfActivity"
            android:label="@string/title_activity_conf"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/Theme.Connet.NoActionBar" />
        <activity
            android:name=".RegActivity"
            android:label="@string/title_activity_reg"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/Theme.Connet.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/Theme.Connet.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/Theme.Connet.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>